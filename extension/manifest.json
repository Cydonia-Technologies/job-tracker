{
  "manifest_version": 3,
  "name": "Job Application Tracker",
  "version": "1.0.0",
  "description": "AI-powered job application tracking with automatic job extraction from major job sites",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "background"
  ],

  "host_permissions": [
    "https://www.indeed.com/*",
    "https://indeed.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.glassdoor.com/*",
    "https://glassdoor.com/*",
    "https://nittany.lions.psu.edu/*",
    "https://psu.joinhandshake.com/*",
    "http://localhost:3001/*"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.indeed.com/viewjob*",
        "https://indeed.com/viewjob*",
        "https://www.indeed.com/jobs*",
        "https://indeed.com/jobs*"
      ],
      "js": [
        "utils/constants.js",
        "utils/api.js",
        "content/extractors/indeed.js",
        "content/ui/overlay.js",
        "content/content.js"
      ],
      "css": ["content/ui/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.linkedin.com/jobs/view/*",
        "https://linkedin.com/jobs/view/*",
        "https://www.linkedin.com/jobs/search/*",
        "https://linkedin.com/jobs/search/*"
      ],
      "js": [
        "utils/constants.js",
        "utils/api.js",
        "content/extractors/linkedin.js",
        "content/ui/overlay.js",
        "content/content.js"
      ],
      "css": ["content/ui/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://nittany.lions.psu.edu/*",
        "https://psu.joinhandshake.com/*"
      ],
      "js": [
        "utils/constants.js",
        "utils/api.js",
        "content/extractors/nittany.js",
        "content/ui/overlay.js",
        "content/content.js"
      ],
      "css": ["content/ui/overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Job Tracker",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },

  "options_page": "options/options.html",

  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
